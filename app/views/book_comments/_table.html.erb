<table class="table">
  <tbody>
  <% book_comments.each do |comment| %>
    <tr class="row" id="comment-<%= comment.id%>">
      <td class="col-4">
        <ul class="list-inline">
          <li class="list-inline-item"><%= attachment_image_tag(comment.user, :profile_image, size: "50x50", fallback: "no_image.jpg") %></li>
          <li class="list-inline-item"><%= comment.user.name%></li>
        </ul>
      </td>
      <td class="col-6"><%= comment.comment %></td>
      <td class="col-2">
        <% if comment.user == current_user %>
          <%= link_to "削除", book_comment_path(comment), method: :delete,remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger", remote: true%>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>