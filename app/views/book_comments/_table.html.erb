<table>
  <% book_comments.each do |comment| %>
    <tr id="comment-<%= comment.id%>">
      <td><%= attachment_image_tag(comment.user, :profile_image, size: "100x100", fallback: "no_image.jpg") %></td>
      <td><%= comment.comment %></td>
      <td><%= link_to "削除", book_comment_path(comment), method: :delete,remote: true, class: "btn btn-danger", remote: true%></td>
    </tr>
  <% end %>
</table>
