<div class="row">
<div class="col-4 alert alert-info p-3">
    <div class="row">
      <div class="col-lg-6"><%= link_to user_path(@book.user.name) do %>
        <%= attachment_image_tag(@book.user, :profile_image, size:"100x100", fallback: "no_image.jpg") %><br>
        <% end %>
      </div>
      <div class="col-lg-6">
        <%= @book.user.name %>
      </div>
    </div>
</div>
<div class="col-8">
  <%= render 'detail', book: @book %>
  <div class="col-12" id="comment__table">
        <%= render 'book_comments/table', book_comments: @book.book_comments%>
  </div>
    <div id="error_explanation"></div>
    <%= form_for [@book, @comment],remote: true, url: book_comment_path do |f|%>
      <%= f.text_area :comment,placeholder: "コメント",rows:"3" %>
      <%= f.submit "送信", class: "btn btn-primary", id: "comment__textarea" %>
  <% end %>
</div>
</div>