<table class='table'>
  <tr>
    <td><%= link_to user_path(@book.user.name) do %>
      <%= attachment_image_tag(@book.user, :profile_image, size:"100x100", fallback: "no_image.jpg") %><br>
      <%= @book.user.name %>
      <% end %>
    </td>
    <td><%= @book.title %></td>
    <td><%= @book.description %></td>
    <td id=<%= "table__favorite--" +@book.id.to_s %>>
      <%= render 'favorites/book',book: @book, user: current_user%>
    </td>
    <td>コメント数: <%= @book.book_comments.count %></td>
    <% if @book.user == current_user %>
      <td><%= link_to 'Edit', edit_book_path(@book), class: "btn-sm btn-success" %></td>
      <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn-sm btn-danger"%></td>
    <% end %>
  </tr>
</table>
<div id="comment__table">
      <%= render 'book_comments/table', book_comments: @book.book_comments%>
</div>
<%= form_with url:root_path do |f| %> 
<% end %>
  <%= form_for [@book, @comment],remote: true, url: book_comment_path do |f|%>
    <%= f.text_area :comment,placeholder: "コメント",rows:"3" %>
    <%= f.submit "送信", class: "btn btn-primary", id: "comment__textarea" %>
  <% end %>