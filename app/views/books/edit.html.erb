<h2>投稿本編集</h2>

<%= form_with(model:@book,local:true) do |f| %>
  <%= render 'layouts/errors', obj: @book %>

  <div class="field row">
    <%= f.text_field :title,placeholder:"タイトル", class: "col-sm mb-2 form-control" %>
  </div>

  <div class="field row">
    <%= f.text_area :description,placeholder:"紹介文" ,class: "introduction col-sm mb-4 form-control" %>
  </div>

  <div class="actions">
    <%= f.submit class:"btn btn-primary col-sm"%>
  </div>
<% end %>
