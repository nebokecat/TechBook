<div class="row border-bottom">
    <div class="col-md-3"><%= book.title %></div>
    <div class="col-md-5" style="word-break: break-all;"><%= book.description %></div>
    <div  class="col-md-2" id=<%= "table__favorite--" + book.id.to_s %>>
      <%= render 'favorites/book',book: book, user: current_user,count: book.favorites.count %>
    </div>
    <div  class="col-md-2">コメント数: <%= book.book_comments.count %></div>
    <% if book.user == current_user %>
      <div  class="col-md"><%= link_to '編集', edit_book_path(book), class: "btn-sm btn-success" %></div>
      <div  class="col-md"><%= link_to '削除', book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn-sm btn-danger"%></div>
    <% end %>
</div>